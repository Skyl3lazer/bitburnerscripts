/** @param {NS} ns **/
//hacks a target
export async function main(ns) {
	let target = ns.args[0];
	let amount = await ns.hack(target);
	if (amount > 0) {
		ns.toast("Hacked " + ns.nFormat(amount, "$0,0.00") + " from " + target+"!");
	} else if (amount ===0){
		ns.toast("Hack failed on "+target+"!");
	}
}